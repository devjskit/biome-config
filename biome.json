
{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["node_modules/**/*","dist/**/*","build/**/*",".vscode/**/*",".next/**/*"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "master",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 160
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
				"noForEach": "off"
			},
      "suspicious":{
        "noExplicitAny": "off"
        
      },
      "style":{
        "noNonNullAssertion": "off",
        "useImportType": "off" 
      },
      "a11y":{
        "noSvgWithoutTitle": "off"
      }
    }
  }
}
